<!-- File: app/src/main/res/xml/data_extraction_rules.xml -->
<!-- Purpose: Data extraction rules for Android 12+ -->
<!-- Dependencies: None -->

<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Include app data for cloud backup -->
        <include domain="database" path="." />
        <include domain="sharedpref" path="." />
        
        <!-- Exclude sensitive data from cloud backup -->
        <exclude domain="database" path="dealervait_secure_prefs" />
        <exclude domain="file" path="cache/" />
        <exclude domain="file" path="temp/" />
    </cloud-backup>
    
    <device-transfer>
        <!-- Include data for device-to-device transfer -->
        <include domain="database" path="." />
        <include domain="sharedpref" path="." />
        <include domain="file" path="documents/" />
        
        <!-- Exclude sensitive data from device transfer -->
        <exclude domain="database" path="dealervait_secure_prefs" />
        <exclude domain="file" path="cache/" />
    </device-transfer>
</data-extraction-rules>
