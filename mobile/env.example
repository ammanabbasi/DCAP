# DealersCloud Mobile App Environment Configuration
# Copy this file to .env and update with your values

# Build Environment
NODE_ENV=development
BUILD_VARIANT=debug

# API Configuration
API_BASE_URL=http://localhost:5000
SOCKET_URL=http://localhost:5000
API_TIMEOUT=30000

# Environment Specific APIs
DEV_API_BASE_URL=http://localhost:5000
DEV_SOCKET_URL=http://localhost:5000
STAGING_API_BASE_URL=https://dcgptrnapi.azurewebsites.net
STAGING_SOCKET_URL=https://dcgptrnapi.azurewebsites.net
PROD_API_BASE_URL=https://dcrnapi.azurewebsites.net
PROD_SOCKET_URL=https://dcrnapi.azurewebsites.net

# App Configuration
APP_NAME=DealersCloud
APP_DISPLAY_NAME=DealersCloud
APP_VERSION=1.0.0
VERSION_CODE=1
BUILD_NUMBER=1

# Bundle Configuration
ANDROID_PACKAGE_NAME=com.dealerscloud.mobile
IOS_BUNDLE_ID=com.dealerscloud.mobile

# Deep Linking
DEEP_LINK_SCHEME=dealerscloud
DEEP_LINK_HOST=mobile.dealerscloud.com

# Feature Flags
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_BIOMETRIC_AUTH=true
ENABLE_OFFLINE_MODE=true
ENABLE_CRASH_REPORTING=true
ENABLE_ANALYTICS=false
ENABLE_DEBUG_TOOLS=false

# Security Settings
JWT_STORAGE_KEY=dealerscloud_token
REFRESH_TOKEN_KEY=dealerscloud_refresh
BIOMETRIC_PROMPT_TITLE=DealersCloud Authentication
SESSION_TIMEOUT_MS=1800000

# File Upload Configuration
MAX_FILE_SIZE=10485760
MAX_CONCURRENT_UPLOADS=3
UPLOAD_TIMEOUT_MS=120000
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# Cache Configuration
CACHE_SIZE_MB=50
IMAGE_CACHE_SIZE_MB=100
API_CACHE_TTL_MS=300000

# Performance Settings
IMAGE_QUALITY=0.8
LAZY_LOAD_IMAGES=true
ENABLE_HERMES=true
ENABLE_FLIPPER=false

# Location Services
ENABLE_LOCATION_SERVICES=true
LOCATION_ACCURACY=high
LOCATION_TIMEOUT_MS=30000

# Camera & Media
CAMERA_QUALITY=0.8
COMPRESS_IMAGES=true
MAX_IMAGE_DIMENSION=1920

# Networking
CONNECTION_TIMEOUT_MS=10000
READ_TIMEOUT_MS=30000
RETRY_ATTEMPTS=3
RETRY_DELAY_MS=1000

# Offline Storage
REALM_SCHEMA_VERSION=1
MAX_OFFLINE_RECORDS=1000
SYNC_INTERVAL_MS=300000

# Development Tools
ENABLE_DEV_MENU=true
ENABLE_REMOTE_DEBUGGING=false
LOG_LEVEL=info

# Analytics & Monitoring
CRASHLYTICS_ENABLED=true
ANALYTICS_ENABLED=false
PERFORMANCE_MONITORING=false

# Push Notifications
FCM_SENDER_ID=your_fcm_sender_id
FCM_API_KEY=your_fcm_api_key

# Google Services
GOOGLE_MAPS_API_KEY_ANDROID=your_android_maps_key
GOOGLE_MAPS_API_KEY_IOS=your_ios_maps_key

# Social Authentication
GOOGLE_CLIENT_ID=your_google_client_id
FACEBOOK_APP_ID=your_facebook_app_id

# Build Signing (DO NOT commit real values)
# Android Keystore
DEALERSCLOUD_UPLOAD_STORE_FILE=dealerscloud-release.keystore
DEALERSCLOUD_UPLOAD_KEY_ALIAS=dealerscloud
DEALERSCLOUD_UPLOAD_STORE_PASSWORD=your_keystore_password
DEALERSCLOUD_UPLOAD_KEY_PASSWORD=your_key_password

# iOS Certificates
IOS_DEVELOPMENT_TEAM=your_apple_team_id
IOS_CODE_SIGN_IDENTITY=Apple Development

# Test Configuration (Development Only)
ENABLE_TEST_CREDENTIALS=false
TEST_USERNAME=testuser
TEST_PASSWORD=testpass
TEST_DEALERSHIP_URL=https://test.dealerscloud.com

# Third-party Services
CARFAX_API_KEY=your_carfax_api_key
TWILIO_ACCOUNT_SID=your_twilio_sid

# Error Tracking
SENTRY_DSN=your_mobile_sentry_dsn
BUGSNAG_API_KEY=your_bugsnag_key

# Code Push (for OTA updates)
CODEPUSH_DEPLOYMENT_KEY_ANDROID=your_android_deployment_key
CODEPUSH_DEPLOYMENT_KEY_IOS=your_ios_deployment_key
