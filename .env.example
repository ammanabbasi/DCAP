# Root Environment Variables
# These variables are shared across all workspaces

# Node.js Environment
NODE_ENV=development

# Logging
LOG_LEVEL=info

# Common Database Settings (inherited by workspaces)
DB_HOST=localhost
DB_PORT=1433
DB_NAME=dealerscloud_dev
DB_USER=sa
DB_PASSWORD=your_password_here

# Redis Settings (inherited by workspaces)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Azure Storage (shared across backend and mobile)
AZURE_STORAGE_ACCOUNT_NAME=your_storage_account
AZURE_STORAGE_ACCOUNT_KEY=your_storage_key
AZURE_STORAGE_CONTAINER=dealerscloud-files

# Application URLs
BACKEND_URL=http://localhost:5000
WEB_URL=http://localhost:3000

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
ENCRYPTION_KEY=your-32-character-encryption-key

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@dealerscloud.com

# Feature Flags
FEATURE_MOBILE_PUSH_NOTIFICATIONS=true
FEATURE_REAL_TIME_CHAT=true
FEATURE_ADVANCED_REPORTING=false

# External APIs
CARFAX_API_KEY=your_carfax_api_key
CARFAX_API_URL=https://api.carfax.com/v1

# Monitoring
APPLICATION_INSIGHTS_KEY=your_app_insights_key